  <!-- SLIDESHOW -->
  <div class="slideshow" id="slideshow"></div>

  <!-- UPLOAD SECTION -->
  <div class="container">
    <div class="upload-section">
      <h2>Upload Your Golf Photos</h2>
      <input type="file" id="photoInput" accept="image/*" multiple>
      <div class="preview" id="preview"></div>
      <button id="approveBtn" style="display:none;" onclick="approveUploads()">Approve Uploads</button>
    </div>

    <h3>Gallery</h3>
    <div class="gallery-grid" id="galleryGrid"></div>
  </div>

  <footer>
    <p>© 2025 Barford Golf Society</p>
  </footer>

  <script>
    let gallery = JSON.parse(localStorage.getItem("bgsGallery") || "[]");
    let previewFiles = [];

    const galleryGrid = document.getElementById("galleryGrid");
    const slideshow = document.getElementById("slideshow");
    const preview = document.getElementById("preview");

    function renderGallery() {
      galleryGrid.innerHTML = "";
      slideshow.innerHTML = "";
      gallery.forEach((img, i) => {
        galleryGrid.innerHTML += `<img src="${img}" alt="Gallery photo ${i+1}">`;
        slideshow.innerHTML += `<img src="${img}" class="${i === 0 ? "active" : ""}">`;
      });
    }

    // Auto slideshow
    setInterval(() => {
      const slides = document.querySelectorAll(".slideshow img");
      if (!slides.length) return;
      let activeIndex = Array.from(slides).findIndex(img => img.classList.contains("active"));
      slides[activeIndex].classList.remove("active");
      slides[(activeIndex + 1) % slides.length].classList.add("active");
    }, 4000);

    // Preview selected photos
    document.getElementById("photoInput").addEventListener("change", e => {
      preview.innerHTML = "";
      previewFiles = Array.from(e.target.files);
      previewFiles.forEach((file, i) => {
        const reader = new FileReader();
        reader.onload = () => {
          const div = document.createElement("div");
          div.innerHTML = `<img src="${reader.result}"><button class="delete-btn" onclick="removePreview(${i})">×</button>`;
          preview.appendChild(div);
        };
        reader.readAsDataURL(file);
      });
      document.getElementById("approveBtn").style.display = "inline-block";
    });

    function removePreview(index) {
      previewFiles.splice(index, 1);
      preview.children[index].remove();
      if (!previewFiles.length) document.getElementById("approveBtn").style.display = "none";
    }

    function approveUploads() {
      previewFiles.forEach(file => {
        const reader = new FileReader();
        reader.onload = () => {
          gallery.push(reader.result);
          localStorage.setItem("bgsGallery", JSON.stringify(gallery));
          renderGallery();
        };
        reader.readAsDataURL(file);
      });
      alert("✅ Photos uploaded successfully!");
      preview.innerHTML = "";
      previewFiles = [];
      document.getElementById("approveBtn").style.display = "none";
    }

    renderGallery();
  </script>
</body>
